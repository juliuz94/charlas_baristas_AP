<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- Styles -->
    <link rel="stylesheet" href="/styles/style.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Muli:wght@500;600;700&display=swap" rel="stylesheet">
    <title>Amor Perfecto</title>
</head>

<body>

    <%- include('./partials/header-eventos') %>

    <% if (messages.message) { %>
        <div class="alert alert-success" role="alert" style="margin-top: 25px;">
            <%= messages.message %>
          </div>
    <% } %>
    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert" style="margin-top: 25px;">
            <%= messages.error %>
          </div>
    <% } %>



    <section class="eventos-section">
        <h2>INSCRÍBETE A NUESTRO CONVERSATORIO</h2>
        <form class="formulario-eventos" action="/eventos" method="POST">
            <input type="text" class="form-control" id="nameInput" name="name" placeholder="NOMBRE COMPLETO: ">
            <input type="text" class="form-control" id="emailInput" name="email" placeholder="CORREO ELECTRÓNICO: ">
            <input type="text" class="form-control" id="phoneInput" name="telephone" placeholder="NÚMERO DE CONTACTO: ">
            <input type="hidden" class="form-control" id="phoneInput" name="event" value="tinto-con-tinto-2">
            <button type="submit" id="submitButton" disabled class="btn">TERMINAR INSCRIPCIÓN</button>
        </form>

    </section>

    <section class="loader-backdrop">
        <img src="https://www.cafeamorperfecto.com/wp-content/uploads/2019/05/1_Mesa_de_trabajo_1.png"
            alt="cafe-amor-perfecto">
    </section>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous">
    </script>
    <script src="/scripts/scripts.js"></script>

    <script>
        const nameField = $('#nameInput');
        const emailField = $('#emailInput');
        const phoneField = $('#phoneInput');
        const submitButton = $('#submitButton');

        function checkFields() {
            if (!nameField.val()) {
                submitButton.attr("disabled", true);
                return;
            } 
            if (!emailField.val()) {
                submitButton.attr("disabled", true);
                return;   
            } 
            if (!phoneField.val()) {
                submitButton.attr("disabled", true);
                return;
            }
            submitButton.removeAttr('disabled');
        }

        nameField.on('input', () => checkFields());
        emailField.on('input', () => checkFields());
        phoneField.on('input', () => checkFields());

    </script>


</body>



</html>