<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <!-- Styles -->
  <link rel="stylesheet" href="/styles/style.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;900&display=swap" rel="stylesheet">
  <title>Amor Perfecto</title>
</head>

<body>

  <%- include('./partials/header') %>

  <section class="baristas-section">

    <div class="container">

      <!-- <div class="alert alert-danger alert-dismissible fade show" role="alert" id="infoAlert" style="width: 80%; margin: 0 auto;">
        <button type="button" class="close" id="markAlertSeen" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="alert-heading">Recuerda que</h4>
        <p>Todas las compras a partir de <strong>20 de Mayo</strong> aplican</p>
      </div> -->

      <div class="page-title">
        <hr class="deco-line-1">
        <h1>CONOCE A NUESTROS EXPERTOS</h1>
        <hr class="deco-line-1">
      </div>

      <div class="row baristas-row">

        <% baristas.forEach(barista => { %>
        <% if(barista.name !== 'Luis Fernando Velez' && barista.name !== 'Walter Acevedo') { %>
        <div class="col-md-6 col-sm-12">
          <div class="card barista-card">
            <img src="<%=barista.imageUrl%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h4 class="card-title"><%=barista.name%></h4>
              <p class="card-text"><%=barista.title%></p>
              <a href="/barista/<%=barista.name%>" class="btn btn-block btn-sm">CONOCER M√ÅS</a>
            </div>
          </div>
        </div>
        <% } %>
        <% }); %>
      </div>
    </div>
  </section>

  <div id='app_plugin_rebus' class='app_plugin_rebus'></div>

  <section class="loader-backdrop">
    <img src="https://www.cafeamorperfecto.com/wp-content/uploads/2019/05/1_Mesa_de_trabajo_1.png"
      alt="cafe-amor-perfecto">
  </section>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
  </script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
  </script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous">
  </script>
  <script src="/scripts/scripts.js"></script>

  <script>
    const infoAlert = $('#infoAlert');
    const marktAlertSeen = $('#markAlertSeen');

    function markAsRead() {
      document.cookie = "markAlertSeen=true";
      console.log(document.cookie);
    }

    marktAlertSeen.on('click', () => {
      markAsRead();
    });

    if (document.cookie.split(';').some((item) => item.trim().startsWith('markAlertSeen='))) {
      infoAlert.css('display', 'none');
    }
  </script>
</body>



</html>